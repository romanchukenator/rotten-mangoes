<%= form_for @movie do |f| %>
  <div>
    <%= f.label "Title" %><br />
    <%= f.text_field "title" %>
  </div>

  <div>
    <%= f.label "Director" %><br />
    <%= f.text_field "director" %>
  </div>

  <div>
    <%= f.label "Runtime" %><br />
    <%= f.number_field "runtime_in_minutes" %>
  </div>

  <div>
    <%= f.label "Summary" %><br />
    <%= f.text_area "description" %>
  </div>

  <div>
    <%= f.label "Poster URL" %><br />
    <%= f.url_field "poster_image_url" %>
  </div>

  <div>
    <%= f.label "Release Date" %><br />
    <%= f.date_field "release_date" %><br />
  </div>

  <div>
  <%= f.submit "Submit" %>
  </div>

<% end %>